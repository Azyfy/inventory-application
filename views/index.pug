extends layout

block content
  div#background.p-5
    h1.d-flex.justify-content-center= title

    div.text-center.mt-5
      p This line has an un-escaped string: !{'<em> is emphasised</em>'}, an escaped string: #{'<em> is not emphasised</em>'}, and escaped variables: #{title}
      p= 'Evaluated and <em>escaped expression</em>:' + title

    div.d-flex.justify-content-center.mt-5.p-5
      a(href="/inventory") 
        button.btn.btn-outline-light.ps-5.pe-5.mt-5 Inventory