extends inventory

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='manu-name') Name:
      input#manu-name.form-control(type='text', placeholder='Name' name='name' value=(undefined===manufacturer ? '' : manufacturer.name))
      label(for='country-name') Country:
      input#country-name.form-control(type='text', placeholder='Country' name='country' value=(undefined===manufacturer ? '' : manufacturer.country))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg