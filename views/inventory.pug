extends layout

block content

  h1= title

  div.float-end.clearfix.border-start.border-3.p-2
    nav.nav.flex-column
      p Add new
      a.nav-link(href="/inventory/car/create") Car
      a.nav-link(href="/inventory/manufacturer/create") Manufacturer

  if error
    p Error getting dynamic content.
  else
    p The inventory has the following record counts:

    ul
      li 
        a(href="/inventory/car_list") #[strong Cars:] 
        |  !{data.car_count}
      li 
        a(href="/inventory/manufacturer_list")  #[strong Manufacturers:] 
        |  !{data.manufacturer_count}
      li 
        a(href="/inventory/category_list") #[strong Categories:] 
        |  !{data.category_count}